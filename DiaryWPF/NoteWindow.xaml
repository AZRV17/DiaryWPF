<Window x:Class="DiaryWPF.NoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Note" Height="220" Width="300">
    <Grid>
        <TextBox x:Name="noteTextBox" Grid.Row="1" Margin="5"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button x:Name="save_btn" Content="OK" Margin="5" Command="{Binding OkCommand}" Click="save_Button_Click"/>
            <Button Content="Cancel" Margin="5" Command="{Binding CancelCommand}"/>
        </StackPanel>
        <DatePicker x:Name="calendar" HorizontalAlignment="Left" Margin="10,150,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
